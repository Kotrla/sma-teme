<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment1">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Your username:"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/textView"
        android:text="Your password"
        tools:ignore="UnknownId" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/textView2"
        android:text="Your email:" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:layout_alignTop="@+id/textView3"
        android:text="Your age:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Username" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Password" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Email" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/textView7"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Age" />

    <EditText
        android:id="@+id/editUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:hint="Username"></EditText>

    <EditText
        android:id="@+id/editPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/editUs"
        android:layout_centerVertical="true"
        android:layout_marginTop="55dp"
        android:hint="Password"></EditText>

    <EditText
        android:id="@+id/editEm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/editPw"
        android:layout_centerVertical="true"
        android:layout_marginTop="55dp"
        android:hint="Email"></EditText>

    <EditText
        android:id="@+id/editAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/editEm"
        android:layout_centerVertical="true"
        android:layout_marginTop="55dp"
        android:hint="Age"></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeButton"
        android:text="Change"
        android:layout_alignTop="@+id/editAge"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        ></Button>

</RelativeLayout>